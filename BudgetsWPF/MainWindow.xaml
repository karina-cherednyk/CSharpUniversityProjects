<Window x:Class="BudgetsWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetsWPF"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="1000" Width="900" Background="#ffdadada">
    <Grid >
        <Border MinWidth="800" MaxWidth="900" Margin="15,126,15,83" 
                Background="White" VerticalAlignment="Center" 
                Padding="30"  CornerRadius="20" MinHeight="800" MaxHeight="1000" >
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="Gray" ShadowDepth="1" />
            </Border.Effect>
            <local:MainView/>
        </Border>
    </Grid>
</Window>
